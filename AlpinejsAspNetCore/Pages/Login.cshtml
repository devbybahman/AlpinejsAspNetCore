@page
@model Login
@{
    Layout = "_LoginLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">ورود به پنل مدیریت</h2>
        
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4 text-center"></div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">نام کاربری</label>
                <input asp-for="Input.Username" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-indigo-500" />
                <span asp-validation-for="Input.Username" class="text-xs text-red-500"></span>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2">رمز عبور</label>
                <input asp-for="Input.Password" type="password" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-indigo-500" />
                <span asp-validation-for="Input.Password" class="text-xs text-red-500"></span>
            </div>

            <button type="submit" class="w-full bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-700 transition duration-300">
                ورود
            </button>
        </form>
    </div>
</div>