@*@page "/admin/BaseInfo/Cities"*@
@page
@model Admin.Pages.BaseInfo.Pages.Cities.Index
@{
    Layout = "_AdminLayout";
}
<!-- هدر صفحه -->
<div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl font-bold text-gray-800">مدیریت شهرها</h1>
        <p class="text-sm text-gray-500 mt-1">لیست تمام شهرهای تحت پوشش</p>
    </div>
    <a asp-page="Manage" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-lg shadow-sm text-sm font-medium transition-colors flex items-center">
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
        افزودن شهر جدید
    </a>
</div>

<!-- جدول داده‌ها -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">شناسه</th>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">نام شهر</th>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">استان</th>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">آیتم</th>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">وضعیت</th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">عملیات</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
                @foreach (var city in Model.Cities.Items)
                {
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@city.Id</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@city.Name</td>
              
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">

                            @(city.StateName) 
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <a asp-page="Items" asp-route-id="@city.Id" class="text-indigo-600 hover:text-indigo-900">آیتم</a>
                        </td>
                      
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if(city.IsActive) {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">فعال</span>
                            } else {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">غیرفعال</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-left text-sm font-medium space-x-2 space-x-reverse">
                            <a asp-page="Manage" asp-route-id="@city.Id" class="text-indigo-600 hover:text-indigo-900">ویرایش</a>
                            
                            <form method="post" asp-page-handler="Delete" asp-route-id="@city.Id" class="inline-block" onsubmit="return confirm('آیا از حذف این شهر اطمینان دارید؟');">
                                <button type="submit" class="text-red-500 hover:text-red-700 mr-3">حذف</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- اگر لیست خالی بود -->
    @if (!Model.Cities.Items.Any())
    {
        <div class="p-8 text-center text-gray-500 text-sm">
            هیچ داده‌ای برای نمایش وجود ندارد.
        </div>
    }
    <partial name="~/Pages/Shared/_Pagination.cshtml" model="Model.Cities" />
  
</div>