@page "{id:int?}"
@model Admin.Pages.BaseInfo.Pages.Cities.Manage
@{
    Layout = "_AdminLayout";
}

<div class="max-w-2xl mx-auto">
    <!-- هدر فرم -->
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800">@Model.PageTitle</h1>
        <a asp-page="Index" class="text-sm text-gray-500 hover:text-indigo-600">
            بازگشت به لیست &rarr;
        </a>
    </div>

    <!-- باکس سفید فرم -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 md:p-8">
        <form method="post" class="space-y-6">
            <input type="hidden" asp-for="CityData.Id" />

            <!-- فیلد نام شهر -->
            <div>
                <label asp-for="CityData.Name" class="block text-sm font-medium text-gray-700 mb-1">نام شهر</label>
                <input asp-for="CityData.Name" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border" placeholder="مثلا: کاشان" />
                <span asp-validation-for="CityData.Name" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="CityData.StateId" class="block text-sm font-medium text-gray-700 mb-1">استان</label>
    
                <select asp-for="CityData.StateId" 
                        asp-items="Model.StateOptions" 
                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border bg-white">
                    <option value="">-- لطفاً یک استان را انتخاب کنید --</option>
                </select>
    
                <span asp-validation-for="CityData.StateId" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <!-- سوییچ وضعیت -->
            <div class="flex items-center">
                <input asp-for="CityData.IsActive" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                <label asp-for="CityData.IsActive" class="mr-2 block text-sm text-gray-900">
                    این شهر فعال باشد
                </label>
            </div>

            <!-- دکمه‌ها -->
            <div class="pt-4 border-t border-gray-50 flex justify-end">
                <a asp-page="Index" class="ml-3 inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50">انصراف</a>
                <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-6 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    ذخیره اطلاعات
                </button>
            </div>
        </form>
    </div>
</div>